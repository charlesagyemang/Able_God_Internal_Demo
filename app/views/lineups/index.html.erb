<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Lineups</h1>

<%= link_to 'New Lineup', new_lineup_path, class: "btn btn-outline-primary" %><br><br>

<table class="table table-stripped" id="list-table">
  <thead>
    <tr>
      <th>LineUp Id</th>
      <th>Service</th>
      <th>Mc</th>
      <th>Activities</th>

      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
  </thead>
  <tbody>
    <% @lineups.includes(:service, :programme).each do |lineup| %>
      <tr>
        <td><%= lineup.id %></td>
        <td><%= lineup.service.service_type %> SERVICE [<%= lineup.service.date %>] - PLU</td>
        <td><%= lineup.mc %></td>
        <td><%= lineup.programme.length %></td>
        <td><%= link_to 'Show', lineup,  class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_lineup_path(lineup),  class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', lineup, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>


<% content_for :page_scripts do %>
  <script>

    function readyy(){
       $("#list-table").DataTable({
        dom: 'Bfrtip',
       })
    }

    $(document).ready(readyy)
    $(document).on('page:load', readyy)
   
  </script>

<% end %>
</div>



