<%= form_with(model: member) do |form| %>
 <div class="container">

  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 

  <div class="row">
    <div class="col-sm">
      <div class="form-group">
        <%= form.label :name, class: "col-md-4 control-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm">  
      <div class="form-group">
        <%= form.label :email, class: "col-md-4 control-label"  %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm">
        <div class="form-group">
          <%= form.label :birthday %><br />
          <%= form.date_select :birthday,  start_year: Date.today.year - 80,  end_year: Date.today.year, class: "form-control" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
        <div class="form-group">
          <%= form.label :phone_number %>
          <%= form.text_field :phone_number, class: "form-control" %>
        </div>
    </div>
    <div class="col-sm">   
      <div class="form-group">
        <%= form.label :year_joined %>
        <%= form.text_field :year_joined, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm">
        <div class="form-group">
          <%= form.label :telegram_number %>
          <%= form.text_field :telegram_number, class: "form-control" %>
        </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
        <div class="form-group">
          <%= form.check_box :primary_education, class: "form-control, form-check-label"%>
          <%= form.label :primary_education , class: "control-label"%>
        </div>
    </div>
    <div class="col-sm">
        <div class="form-group">
          <%= form.check_box :secondary_education, class: "form-control, form-check-label" %>
          <%= form.label :secondary_education %>
        </div>
    </div>
    <div class="col-sm"> 
      <div class="form-group">
        <%= form.check_box :above_secondary, class: "form-control, form-check-label" %>
        <%= form.label :above_secondary %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
        <div class="form-group">
          <%= form.label :whatsapp_number %>
          <%= form.text_field :whatsapp_number, class: "form-control" %>
        </div>
    </div>
    <div class="col-sm">   
      <div class="form-group">
        <%= form.label :twitter_name %>
        <%= form.text_field :twitter_name, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <%= form.label :facebook_name %>
        <%= form.text_field :facebook_name, class: "form-control" %>
      </div>
    </div>
  </div>


   <div class="row">

    <div class="col-sm">
      <div class="form-group">
        <%= form.label :phone_number_three %>
        <%= form.text_field :phone_number_three, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm">
        <div class="form-group">
          <%= form.label :phone_number_two %>
          <%= form.text_field :phone_number_two, class: "form-control" %>
        </div>
    </div>
    <div class="col-sm">   
      <div class="form-group">
        <%= form.label :phone_number_four %>
        <%= form.text_field :phone_number_four, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-sm">
       <div class="form-group">
        <%= form.label :occupation %>
        <%= form.text_field :occupation, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm">   
    </div>

    <div class="col-sm">
    </div>
    
  </div>
  

  <div class="row">
    <div class="col-sm">
        <div class="actions">
          <%= form.submit "SUBMIT", class: "btn btn-primary btn-lg"%>
        </div>
    </div>
  </div>
</div>


<% end %>
